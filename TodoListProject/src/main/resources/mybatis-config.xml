<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
    
<configuration>

	<settings>
		<!-- 언더스코어 표기법을 카멜 케이스로 자동 변환하는 설정을 true로 지정 -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
		
		<!-- MyBatis에서는 쿼리에 매핑되는 파라미터에 null이 들어가면 에러가 발생합니다.
		value에 전달할 값이 null일 경우에 처리할 값을 지정하면
		그 값으로 데이터베이스에 값이 세팅됩니다. -->
		<setting name="jdbcTypeForNull" value="NULL" />
		
	</settings>
	
	<!-- resultType 등 패키지 풀 경로 및 클래스 타입을 작성할 때, 경로에 별칭을 붙여주는 설정 -->
	<typeAliases>
		<typeAlias type="com.spring.todoproject.main.dto.MostLikeRecomdResponseDTO" alias="mostLikeRecomdResponseDTO" />
		<typeAlias type="com.spring.todoproject.myaccount.dto.ProfBoxDTO" alias="profBoxDTO" />
		<typeAlias type="com.spring.todoproject.myaccount.entity.Users" alias="users" />
		<typeAlias type="com.spring.todoproject.board.entity.Board" alias="board" />
	    <typeAlias type="com.spring.todoproject.board.dto.BoareListRequestDTO" alias="boardMap" />
		<typeAlias type="com.spring.todoproject.main.entity.Todo" alias="todo" />
		
		
		<!-- <typeAlias type="com.spring.todoproject.freeboard.entity.FreeBoard" alias="freeboard" /> -->
		 <typeAlias type="com.spring.todoproject.user.entity.User" alias="user" />
		 <typeAlias type="com.spring.todoproject.login.entity.Login" alias="login" />
		<!-- <typeAlias type="com.spring.todoproject.reply.entity.Reply" alias="reply" />
		<typeAlias type="com.spring.todoproject.snsboard.entity.SnsBoard" alias="sns" /> -->
	</typeAliases>
	
</configuration>
    
    
    